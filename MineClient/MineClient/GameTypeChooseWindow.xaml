<Window x:Class="MineClient.GameTypeChooseWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MineClient"
        mc:Ignorable="d"
        Title="GameTypeChooseWindow" Height="200" Width="300" Closed="Window_Closed">
    <Window.Background>
        <ImageBrush ImageSource="mine.jpg"/>
    </Window.Background>
    <Grid>
        <Grid.Background>
            <ImageBrush/>
        </Grid.Background>
        <Label Content="Choose your game type" FontSize="24" Margin="35,0,0,0" FontFamily="Times New Roman" Background="{x:Null}" Foreground="Red"/>
        <Button Height="40" Margin="0,80,0,0" Width="220" Content="Player vs Player" Click="pvpBtn_Click"/>
        <Button Height="40" Margin="0,0,0,30" Width="220" Content="Solo game" Click="SoloGameBtn_Click"/>

    </Grid>
</Window>
